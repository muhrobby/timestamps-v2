// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  ADMIN
  OPS
  USER
}

enum UploadStatus {
  PENDING
  UPLOADING
  COMPLETED
  FAILED
}

enum ImageType {
  BEFORE
  AFTER
}

// ============================================
// MODELS
// ============================================

model Store {
  id        String   @id @default(cuid())
  storeCode String   @unique
  storeName String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users          User[]
  packingRecords PackingRecord[]

  @@map("stores")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String
  name         String
  role         UserRole @default(USER)
  isActive     Boolean  @default(true)
  storeId      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  store          Store           @relation(fields: [storeId], references: [id], onDelete: Cascade)
  packingRecords PackingRecord[]
  sessions       Session[]

  @@index([storeId])
  @@index([email])
  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("sessions")
}

model PackingRecord {
  id            String   @id @default(cuid())
  invoiceNumber String
  notes         String?
  packedAt      DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userId  String
  storeId String

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  store  Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  images PackingImage[]

  @@index([invoiceNumber])
  @@index([userId])
  @@index([storeId])
  @@index([packedAt])
  @@map("packing_records")
}

model PackingImage {
  id              String       @id @default(cuid())
  packingRecordId String
  imageType       ImageType
  fileName        String
  localPath       String?
  driveFileId     String?
  driveUrl        String?
  uploadStatus    UploadStatus @default(PENDING)
  uploadProgress  Int          @default(0)
  uploadError     String?
  displayOrder    Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  packingRecord PackingRecord @relation(fields: [packingRecordId], references: [id], onDelete: Cascade)

  @@index([packingRecordId])
  @@index([uploadStatus])
  @@index([displayOrder])
  @@map("packing_images")
}

model AppSettings {
  id    String @id @default(cuid())
  key   String @unique
  value String
  type  String @default("string") // string, boolean, number, json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("app_settings")
}

// Singleton settings for watermark positions
model Settings {
  id                  String   @id @default("default")
  logoPosition        String   @default("top-left")
  addressPosition     String   @default("bottom-left")
  timestampPosition   String   @default("bottom-right")
  companyName         String?
  companyAddress      String?
  logoUrl             String?
  googleDriveFolderId String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("settings")
}

model UploadQueue {
  id         String       @id @default(cuid())
  imageId    String       @unique
  status     UploadStatus @default(PENDING)
  attempts   Int          @default(0)
  maxAttempts Int         @default(3)
  lastError  String?
  priority   Int          @default(0)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  @@index([status])
  @@index([priority])
  @@map("upload_queue")
}
